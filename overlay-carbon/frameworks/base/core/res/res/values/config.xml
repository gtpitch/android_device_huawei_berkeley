<resources>
    <!-- Paths to the libraries that contain device specific key handlers -->
    <string-array name="config_deviceKeyHandlerLibs" translatable="false">
        <item>/system/framework/org.carbonrom.keyhandler.jar</item>
    </string-array>

    <!-- Names of the key handler classes -->
    <string-array name="config_deviceKeyHandlerClasses" translatable="false">
        <item>org.carbonrom.settings.device.KeyHandler</item>
    </string-array>

    <bool name="config_showNavigationBar">true</bool>

    <!-- Does the battery LED support multiple colors for notifications? Used to decide if the user can 
change the colors -->
    <bool name="config_multiColorNotificationLed">true</bool>

    <!-- Is the battery LED intrusive? Used to decide if there should be a disable option -->
    <bool name="config_intrusiveBatteryLed">true</bool>

    <!-- Does the battery LED support multiple colors? Used to decide if the user can change the colors -->
    <bool name="config_multiColorBatteryLed">true</bool>

    <!-- Does the device supports fast charging -->
    <bool name="config_FastChargingLedSupported">true</bool>
</resources>
